FROM php:8.1-apache

# Instala extensiones necesarias para MySQL
RUN docker-php-ext-install mysqli pdo pdo_mysql

# Habilita el m√≥dulo rewrite de Apache
RUN a2enmod rewrite

# Copia todos los archivos del proyecto al directorio del servidor
COPY . /var/www/html/

# Establece permisos adecuados
RUN chown -R www-data:www-data /var/www/html

# Asegura que Apache use .htaccess si lo necesitas (opcional pero recomendable)
RUN sed -i 's/AllowOverride None/AllowOverride All/g' /etc/apache2/apache2.conf

# Expone el puerto por donde Apache sirve
EXPOSE 80
